<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.regex.HelloController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
   <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
   <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

   <Label text="Contact Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
   <TextField fx:id="contactNumberField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

   <Label text="Postal Code:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
   <TextField fx:id="postalCodeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

   <Button text="Submit" onAction="#onSubmitButtonClicked" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

   <Label fx:id="outputLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
